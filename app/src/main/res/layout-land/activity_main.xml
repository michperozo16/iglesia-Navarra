<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dorado"
    android:visibility="visible"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="24dp"
        android:background="@drawable/dorado"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.538">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <Button
                android:id="@+id/iniciarSesionPantalla"
                style="@android:style/Widget.DeviceDefault.Light.Button.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_weight="1"
                android:backgroundTint="#BD1D1D"
                android:onClick="irIniciar"
                android:text="@string/btn_iniciar_pantalla"
                android:visibility="gone" />

            <Button
                android:id="@+id/registrarPantalla"
                style="@android:style/Widget.DeviceDefault.Light.Button.Small"
                android:layout_width="14dp"
                android:layout_height="match_parent"
                android:layout_margin="16dp"
                android:layout_weight="1"
                android:backgroundTint="#BD1D1D"
                android:onClick="irRegistrarse"
                android:text="@string/btn_registrar_pantalla"
                android:visibility="gone" />
        </LinearLayout>

        <Button
            android:id="@+id/cerrarSesion_btn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="CerrarSesion"
            android:text="@string/btn_cerrar_Sesion"
            android:visibility="gone" />

