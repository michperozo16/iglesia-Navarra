            android:layout_height="709dp"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:visibility="visible">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="69dp" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="621dp"
                    android:gravity="center"
                    android:visibility="visible">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="#44484A"
                            app:cardCornerRadius="20dp"
                            app:cardPreventCornerOverlap="true"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textView2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="8dp"
                                    android:fontFamily="@font/galada"
                                    android:freezesText="false"
                                    android:text="@string/descripcion_icm_navarra"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                                    android:textColor="#FFFFFF"
                                    android:textSize="25dp"
                                    android:textStyle="italic" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/imageView2"
                                        android:layout_width="90dp"
                                        android:layout_height="90dp"
                                        android:layout_margin="8dp"
                                        app:srcCompat="@drawable/logo" />

                                    <Button
                                        android:id="@+id/escuela_btn"
                                        style="?attr/materialButtonOutlinedStyle"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="8dp"
                                        android:backgroundTint="#770E0E07"
                                        android:onClick="irIcmNavarra"
                                        android:text="@string/icm_navarra_btn"
                                        app:cornerRadius="20dp"
                                        app:strokeColor="@color/browser_actions_bg_grey" />
                                </LinearLayout>

                            </LinearLayout>


                        </androidx.cardview.widget.CardView>
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="#44484A"
                            app:cardCornerRadius="20dp"
                            app:cardPreventCornerOverlap="true"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textView3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="8dp"
                                    android:text="@string/lema_btn"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                    android:textColor="#FFFFFF"
                                    android:textStyle="italic" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/imageView1"
                                        android:layout_width="70dp"
                                        android:layout_height="70dp"
                                        android:layout_margin="8dp"
                                        app:srcCompat="@drawable/plenitud" />

                                    <Button
                                        android:id="@+id/lema_btn"
                                        style="?attr/materialButtonOutlinedStyle"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="8dp"
                                        android:backgroundTint="#770E0E07"
                                        android:onClick="irLema"
                                        android:text="@string/lema_btn"
                                        app:cornerRadius="20dp"
                                        app:strokeColor="@color/browser_actions_bg_grey" />
                                </LinearLayout>

                            </LinearLayout>


                        </androidx.cardview.widget.CardView>
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="#44484A"
                            app:cardCornerRadius="20dp"
                            app:cardPreventCornerOverlap="true"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textView4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="8dp"
                                    android:text="@string/nosotros_btn"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                    android:textColor="#FFFFFF"
                                    android:textStyle="italic" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/imageView3"
                                        android:layout_width="70dp"
                                        android:layout_height="70dp"
                                        android:layout_margin="8dp"
                                        app:srcCompat="@drawable/vision" />

                                    <Button
                                        android:id="@+id/video_btn"
                                        style="?attr/materialButtonOutlinedStyle"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="8dp"
                                        android:backgroundTint="#770E0E07"
                                        android:onClick="irNosotros"
                                        android:text="@string/nosotros_btn"
                                        app:cornerRadius="20dp"
                                        app:strokeColor="@color/browser_actions_bg_grey" />
                                </LinearLayout>

                            </LinearLayout>


                        </androidx.cardview.widget.CardView>
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="#44484A"
                            app:cardCornerRadius="20dp"
                            app:cardPreventCornerOverlap="true"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textView5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="8dp"
                                    android:text="@string/encuentros_btn"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                    android:textColor="#FFFFFF"
                                    android:textStyle="italic" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/imageView4"
                                        android:layout_width="70dp"
                                        android:layout_height="70dp"
                                        android:layout_margin="8dp"
                                        app:srcCompat="@drawable/ministros" />

                                    <Button
                                        android:id="@+id/encuentro_btn"
                                        style="?attr/materialButtonOutlinedStyle"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="8dp"
                                        android:backgroundTint="#770E0E07"
                                        android:onClick="irEncuentro"
                                        android:text="@string/encuentros_btn"
                                        app:cornerRadius="20dp"
                                        app:strokeColor="@color/browser_actions_bg_grey" />

                                </LinearLayout>


                            </LinearLayout>


                        </androidx.cardview.widget.CardView>

                    </TableRow>

                </TableLayout>

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="568dp"
                    android:gravity="center"
                    android:visibility="visible">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        //apartir de aqui

                        <androidx.cardview.widget.CardView
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="#1B5E20"
                            app:cardCornerRadius="20dp"
                            app:cardPreventCornerOverlap="true"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textViewDiscipulado"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_margin="8dp"
                                    android:fontFamily="@font/galada"
                                    android:gravity="center"
                                    android:text="@string/escuelas"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                                    android:textColor="#FFFFFF"
                                    android:textStyle="italic" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/imageView7"
                                        android:layout_width="70dp"
                                        android:layout_height="70dp"
                                        android:layout_margin="8dp"
                                        app:srcCompat="@drawable/logonegro1"
                                        tools:srcCompat="@drawable/logonegro1" />

                                    <Button
                                        android:id="@+id/discipulado_btn"
                                        style="?attr/materialButtonOutlinedStyle"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="8dp"
                                        android:backgroundTint="#770E0E07"
                                        android:onClick="irEscuela"
                                        android:text="@string/escuelas_btn"
                                        app:cornerRadius="20dp"
                                        app:strokeColor="@color/browser_actions_bg_grey" />
                                </LinearLayout>

                            </LinearLayout>


                        </androidx.cardview.widget.CardView>
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="#44484A"
                            app:cardCornerRadius="20dp"
                            app:cardPreventCornerOverlap="true"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textView7"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="8dp"
                                    android:text="@string/libros_btn"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                    android:textColor="#FFFFFF"
                                    android:textStyle="italic" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/imageView8"
                                        android:layout_width="70dp"
                                        android:layout_height="70dp"
                                        android:layout_margin="8dp"
                                        app:srcCompat="@drawable/ic_library" />

                                    <Button
                                        android:id="@+id/Alavanzas_btn"
                                        style="?attr/materialButtonOutlinedStyle"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="8dp"
                                        android:backgroundTint="#770E0E07"
                                        android:onClick="irLibros"
                                        android:text="@string/libros_btn"
                                        app:cornerRadius="20dp"
                                        app:strokeColor="@color/browser_actions_bg_grey" />
                                </LinearLayout>

                            </LinearLayout>


                        </androidx.cardview.widget.CardView>
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="#44484A"
                            app:cardCornerRadius="20dp"
                            app:cardPreventCornerOverlap="true"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textViewDiario"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="8dp"
                                    android:text="@string/videos_btn"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                    android:textColor="#FFFFFF"
                                    android:textStyle="italic" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/imageView9"
                                        android:layout_width="70dp"
                                        android:layout_height="70dp"
                                        android:layout_margin="8dp"
                                        android:scrollbarTrackVertical="@drawable/video"
                                        app:srcCompat="@drawable/play" />

                                    <Button
                                        android:id="@+id/Diario_btn"
                                        style="?attr/materialButtonOutlinedStyle"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="8dp"
                                        android:backgroundTint="#770E0E07"
                                        android:onClick="irVideo"
                                        android:text="@string/videos_btn"
                                        app:cornerRadius="20dp"
                                        app:strokeColor="@color/browser_actions_bg_grey" />
                                </LinearLayout>

                            </LinearLayout>


                        </androidx.cardview.widget.CardView>
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="142dp"
                            app:cardBackgroundColor="#44484A"
                            app:cardCornerRadius="20dp"
                            app:cardPreventCornerOverlap="true"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textView9"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="8dp"
                                    android:text="Facebook"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                    android:textColor="#FFFFFF"
                                    android:textStyle="italic" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/imageView10"
                                        android:layout_width="70dp"
                                        android:layout_height="70dp"
                                        android:layout_margin="8dp"
                                        android:scrollbarTrackVertical="@drawable/ic_facebook"
                                        app:srcCompat="@drawable/ic_facebook" />

                                    <Button
                                        android:id="@+id/Facebook_btn"
                                        style="?attr/materialButtonOutlinedStyle"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="8dp"
                                        android:backgroundTint="#770E0E07"
                                        android:onClick="facebook"
                                        android:text="ICM NAVARRA"
                                        app:cornerRadius="20dp"
                                        app:strokeColor="@color/browser_actions_bg_grey" />
                                </LinearLayout>


                            </LinearLayout>


                        </androidx.cardview.widget.CardView>

                    </TableRow>


                </TableLayout>

                <Button
                    android:id="@+id/btn_siguiente"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="#9A0E0E07"
                    android:gravity="center"
                    android:onClick="irASegundaPantalla"
                    android:text="@string/btn_siguente"
                    android:textSize="24sp"
                    app:cornerRadius="20dp"
                    app:iconPadding="4dp"
                    app:strokeColor="@color/browser_actions_bg_grey" />

            </LinearLayout>


