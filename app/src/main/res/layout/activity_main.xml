<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_color"
    android:visibility="visible"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="390dp"
        android:layout_height="645dp"
        android:background="@drawable/bg_color"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.616">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible">

            <Button
                android:id="@+id/iniciarSesionPantalla"
                style="@android:style/Widget.DeviceDefault.Light.Button.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_weight="1"
                android:backgroundTint="#BD1D1D"
                android:onClick="irIniciar"
                android:text="@string/btn_iniciar_pantalla"
                android:visibility="gone" />

            <Button
                android:id="@+id/registrarPantalla"
                style="@android:style/Widget.DeviceDefault.Light.Button.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_weight="1"
                android:backgroundTint="#BD1D1D"
                android:onClick="irRegistrarse"
                android:text="@string/btn_registrar_pantalla"
                android:visibility="gone" />
        </LinearLayout>

        <Button
            android:id="@+id/cerrarSesion_btn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="CerrarSesion"
            android:text="@string/btn_cerrar_Sesion"
            android:visibility="gone" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="234dp"
                    android:layout_height="144dp"
                    android:layout_gravity="center"
                    android:visibility="visible"
                    app:srcCompat="@drawable/logo" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="621dp"
                    android:gravity="center"
                    android:visibility="visible">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="#2E97E8"
                            app:cardCornerRadius="20dp"
                            app:cardPreventCornerOverlap="true"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textView2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="8dp"
                                    android:fontFamily="sans-serif-condensed-light"
                                    android:freezesText="false"
                                    android:text="@string/descripcion_icm_navarra"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                                    android:textSize="25sp"
                                    android:textStyle="italic" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/imageView2"
                                        android:layout_width="90dp"
                                        android:layout_height="90dp"
                                        android:layout_margin="8dp"
                                        app:srcCompat="@drawable/logo" />

                                    <Button
                                        android:id="@+id/escuela_btn"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="8dp"
                                        android:backgroundTint="#BD1D1D"
                                        android:onClick="irIcmNavarra"
                                        android:text="@string/icm_navarra_btn" />
                                </LinearLayout>

                            </LinearLayout>


                        </androidx.cardview.widget.CardView>
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="#2E97E8"
                            app:cardCornerRadius="20dp"
                            app:cardPreventCornerOverlap="true"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textView3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="8dp"
                                    android:text="@string/lema_btn"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                    android:textStyle="italic" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/imageView1"
                                        android:layout_width="70dp"
                                        android:layout_height="70dp"
                                        android:layout_margin="8dp"
                                        app:srcCompat="@drawable/plenitud" />

                                    <Button
                                        android:id="@+id/lema_btn"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="8dp"
                                        android:backgroundTint="#BD1D1D"
                                        android:onClick="irLema"
                                        android:text="@string/lema_btn" />
                                </LinearLayout>

                            </LinearLayout>


                        </androidx.cardview.widget.CardView>
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="#2E97E8"
                            app:cardCornerRadius="20dp"
                            app:cardPreventCornerOverlap="true"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textView4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="8dp"
                                    android:text="@string/nosotros_btn"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                    android:textStyle="italic" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/imageView3"
                                        android:layout_width="70dp"
                                        android:layout_height="70dp"
                                        android:layout_margin="8dp"
                                        app:srcCompat="@drawable/vision" />

                                    <Button
                                        android:id="@+id/video_btn"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="8dp"
                                        android:backgroundTint="#BD1D1D"
                                        android:onClick="irNosotros"
                                        android:text="@string/nosotros_btn" />
                                </LinearLayout>

                            </LinearLayout>


                        </androidx.cardview.widget.CardView>
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="#2E97E8"
                            app:cardCornerRadius="20dp"
                            app:cardPreventCornerOverlap="true"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textView5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="8dp"
                                    android:text="@string/encuentros_btn"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                    android:textStyle="italic" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/imageView4"
                                        android:layout_width="70dp"
                                        android:layout_height="70dp"
                                        android:layout_margin="8dp"
                                        app:srcCompat="@drawable/logo" />

                                    <Button
                                        android:id="@+id/encuentro_btn"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="8dp"
                                        android:backgroundTint="#BD1D1D"
                                        android:onClick="irEncuentro"
                                        android:text="@string/encuentros_btn" />
                                </LinearLayout>


                            </LinearLayout>


                        </androidx.cardview.widget.CardView>

                    </TableRow>

                </TableLayout>

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="568dp"
                    android:gravity="center"
                    android:visibility="visible">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        //apartir de aqui

                        <androidx.cardview.widget.CardView
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="#EC3C3C"
                            app:cardCornerRadius="20dp"
                            app:cardPreventCornerOverlap="true"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textView6"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="8dp"
                                    android:text="@string/escuelas"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                                    android:textStyle="italic" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/imageView7"
                                        android:layout_width="70dp"
                                        android:layout_height="70dp"
                                        android:layout_margin="8dp"
                                        app:srcCompat="@drawable/logonegro1"
                                        tools:srcCompat="@drawable/logonegro" />

                                    <Button
                                        android:id="@+id/escuela_btne"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="8dp"
                                        android:onClick="irEscuela"
                                        android:text="@string/escuelas_btn" />
                                </LinearLayout>

                            </LinearLayout>


                        </androidx.cardview.widget.CardView>
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="#2E97E8"
                            app:cardCornerRadius="20dp"
                            app:cardPreventCornerOverlap="true"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textView7"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="8dp"
                                    android:text="@string/libros_btn"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                    android:textStyle="italic" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/imageView8"
                                        android:layout_width="70dp"
                                        android:layout_height="70dp"
                                        android:layout_margin="8dp"
                                        app:srcCompat="@drawable/libro" />

                                    <Button
                                        android:id="@+id/libros_btnl"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="8dp"
                                        android:backgroundTint="#BD1D1D"
                                        android:onClick="irLibros"
                                        android:text="@string/libros_btn" />
                                </LinearLayout>

                            </LinearLayout>


                        </androidx.cardview.widget.CardView>
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="#2E97E8"
                            app:cardCornerRadius="20dp"
                            app:cardPreventCornerOverlap="true"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textView8"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="8dp"
                                    android:text="@string/videos_btn"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                    android:textStyle="italic" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/imageView9"
                                        android:layout_width="70dp"
                                        android:layout_height="70dp"
                                        android:layout_margin="8dp"
                                        app:srcCompat="@drawable/play" />

                                    <Button
                                        android:id="@+id/video_btnv"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="8dp"
                                        android:backgroundTint="#BD1D1D"
                                        android:onClick="irVideo"
                                        android:text="@string/videos_btn" />
                                </LinearLayout>

                            </LinearLayout>


                        </androidx.cardview.widget.CardView>
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="142dp"
                            app:cardBackgroundColor="#2E97E8"
                            app:cardCornerRadius="20dp"
                            app:cardPreventCornerOverlap="true"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textView9"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="8dp"
                                    android:text="Facebook"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                    android:textStyle="italic" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/imageView10"
                                        android:layout_width="70dp"
                                        android:layout_height="70dp"
                                        android:layout_margin="8dp"
                                        app:srcCompat="@drawable/facebook" />

                                    <Button
                                        android:id="@+id/Facebook_btn"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="8dp"
                                        android:backgroundTint="#BD1D1D"
                                        android:onClick="facebook"
                                        android:text="Facebook" />
                                </LinearLayout>


                            </LinearLayout>


                        </androidx.cardview.widget.CardView>

                    </TableRow>
                </TableLayout>

            </LinearLayout>
        </ScrollView>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>